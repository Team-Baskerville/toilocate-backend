<% include partials/_header %>

<div class="container">

  <div class="row">
    <!--FORM-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="Name of the location">
            </div>

            <div class="form-group">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="femaleFriendly">
                <label class="form-check-label" for="femaleFriendly">
                  femaleFriendly
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="urinetanks">
                <label class="form-check-label" for="urinetanks">
                  urinetanks
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="waterSink">
                <label class="form-check-label" for="waterSink">
                  waterSink
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="mirror">
                <label class="form-check-label" for="mirror">
                  mirror
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="shower">
                <label class="form-check-label" for="shower">
                  shower
                </label>
              </div>
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="rating" placeholder="Rating">
            </div>
            <div class="form-group">
              <label for="location">Location</label>
              <div class="row">
                <div class="col">
                  <input type="text" class="form-control" placeholder="Longitude">
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Lattitude">
                </div>
              </div>
            </div>
            <!-- <div class="form-group">
              <label for="rating">Rating</label>
              <select id="rating" class="form-control">
                <option selected>5</option>
                <option>...</option>
              </select>
            </div> -->

            <div class="form-group">
              <textarea class="form-control" name="photos" cols="80" placeholder="Photo URLs (Comma separated)"></textarea>
            </div>
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>NÂ°</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < tasks.length; i++) { %>
          <tr>
            <td><%= i + 1%></td>
            <td><strong><%= tasks[i].title %></strong></td>
            <td><%= tasks[i].description %></td>
            <td>
              <a class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                href="/turn/<%= tasks[i]._id %>">Done</a>
              <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">
                Delete
              </a>
              <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">
                Edit
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>