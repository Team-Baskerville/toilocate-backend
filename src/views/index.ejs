<% include partials/_header %>

<div class="container">

  <div class="row">
    <!--FORM-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="Name of the location"
           >
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="gender" placeholder="male | female | unixex"
              >
            </div>
            <div class="form-group">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="femaleFriendly" name="femaleFriendly"
                 >
                <label class="form-check-label" for="femaleFriendly">
                  femaleFriendly
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="urineTanks" name="urineTanks"
                 >
                <label class="form-check-label" for="urineTanks">
                  urineTanks
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="waterSink"
                 >
                <label class="form-check-label" for="waterSink">
                  waterSink
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox"  name="mirror"
                >
                <label class="form-check-label" for="mirror">
                  mirror
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="shower"
                  >
                <label class="form-check-label" for="shower">
                  shower
                </label>
              </div>
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="rating" placeholder="Rating" >
            </div>
            <div class="form-group">
              <label for="location">Location</label>
              <div class="row">
                <div class="col">
                  <input type="text" class="form-control" placeholder="Longitude" name="longitude"
                   >
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Lattitude" name="latitude">
                </div>
              </div>
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="imagePath" placeholder="Image Path"
                >
            </div>
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Index</th>
            <th>Name</th>
            <th>Gender</th>
            <th>rating</th>
            <th>Longitude</th>
            <th>Latitude</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < toilets.length; i++) { %>
          <tr>
            <td><%= i + 1%></td>
            <td><strong><%= toilets[i].name %></strong></td>
            <td><%= toilets[i].gender %></td>
            <td><%= toilets[i].rating %></td>
            <td><%= toilets[i].location.coordinates[0] %></td>
            <td><%= toilets[i].location.coordinates[1] %></td>
            <td>
              <!-- <a class="<%= toilets[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                href="/turn/<%= toilets[i]._id %>">Done</a> -->
              <a href="/edit/<%= toilets[i]._id %>" class="btn btn-info">
                Edit
              </a>
            </td>
            <td>
              <a href="/delete/<%= toilets[i]._id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>